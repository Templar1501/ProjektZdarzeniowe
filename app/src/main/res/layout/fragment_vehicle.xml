<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vehicleFrag"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controler.VehicleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/vehicleView">

        <Button
            android:id="@+id/takeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Take Vehicle"
            android:visibility="visible"></Button>

        <Button
            android:id="@+id/returnBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Return Vehicle"
            android:visibility="visible"></Button>

        <Button
            android:id="@+id/addOrRemVehBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add or remove vehicle"
            android:visibility="visible"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/vehicleView"
        android:layout_width="match_parent"
        android:layout_height="400dp"/>


</RelativeLayout>